@using LanguageTranslator.Data;
@model TranslateWord

@{
    ViewData["Title"] = "Home Page";
}

    <head>
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

<div class="text-center">
    <h1 class="display-4">Вас приветствует LanguageTranslator</h1>
</div>

<h4 class="mt-4">Вы можете добавить перевод (RU-EN)</h4>
<div class="row">
    <form asp-action="Translate" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Word"></label>
            <div class="col-md-12">
                <input asp-for="Word" class="form-control" />
                <span asp-validation-for="Word" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Translate"></label>
            <div class="col-md-12">
                <input asp-for="Translate" class="form-control" />
                <span asp-validation-for="Translate" class="text-danger"></span>
            </div>
        </div>
        <h4>@ViewData["StatusTranslate"]</h4>
        <input class="btn-success" type="submit" value="Добавить" />
    </form>
</div>

<h4 class="row mt-4">Текущие переводы:</h4>
<table class="row mt-4">
    <tr><td><b>Word</b></td> <td><b>Translate</b></td></tr>
    @foreach (var translate in Words.translates)
    {
        <tr>
            <td>@translate.Word</td>
            <td>@translate.Translate</td>
        </tr>
    }
</table>

