@using LanguageTranslator.Enums
@model TranslateWordModel

@{
    ViewData["Title"] = "Home Page";
}

    <head>
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

<div class="text-center">
    <h1 class="display-4">Вас приветствует LanguageTranslator</h1>
</div>

<h4 class="mt-4">Вы можете добавить перевод (RU-EN)</h4>
<div class="row">
    <form asp-action="Translate" method="post" class="form-horizontal" autocomplete="on">
        <div>
            <select asp-for="WordModel.Language" asp-items="Html.GetEnumSelectList<Languages>()"></select>
            <select asp-for="TranslateModel.Language" asp-items="Html.GetEnumSelectList<Languages>()"></select>
        </div>
        <div class="form-group">
            <label asp-for="WordModel.Word"></label>
            <div class="col-md-12">
                <input asp-for="WordModel.Word" class="form-control" />
                <span asp-validation-for="WordModel.Word" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TranslateModel.Translate"></label>
            <div class="col-md-12">
                <input asp-for="TranslateModel.Translate" class="form-control" />
                <span asp-validation-for="TranslateModel.Translate" class="text-danger"></span>
            </div>
        </div>
        <input class="btn-success" type="submit" value="Добавить" />
    </form>
</div>

<h4 class="row mt-4">Текущие переводы:</h4>
<table class="row mt-4">
    <tr><td><b>Word</b></td> <td><b>Translate</b></td></tr>
    @foreach (var translate in ViewBag.translates)
    {
        <tr>
            <td>@translate.WordModel.Word</td>
            <td>@translate.TranslateModel.Translate</td>
        </tr>
    }
</table>

